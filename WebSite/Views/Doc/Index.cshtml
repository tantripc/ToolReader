@{
    ViewData["Title"] = Localizer["sach"];
    string _currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    Dictionary<string, string> _localizer = Localizer.GetAllStrings().ToDictionary(x => x.Name, x => x.Value);
}
<div class="row cnt_grid_custom">
    <div class="col-lg-12">
        <div class="cnt-card">
            <div class="card-header">
                <div class="card-header-actions">
                    
                        @if (ViewBag.Role == 1301){
                        <a class="card-header-action add_book_new  mr-2" title="@Localizer["laysachtukho"]" href="#" onclick="getbook_warehouse()">
                            <i class="iconmoon iconmoon-Copy icons font-lg"></i>
                                <span>@Localizer["laysachtukho"]</span>
                        </a>
                        <a class="card-header-action add_book_new" title="@Localizer["themmoi"]" href="#" onclick="addupdatedoc()">
                            <i class="iconmoon iconmoon-PlusCircle icons font-lg"></i>
                            <span>@Localizer["themmoi"]</span>
                        </a>
                        }
                        else{
                             <a class="card-header-action add_book_new" title="@Localizer["themmoi"]" href="#" onclick="addupdatedoc()">
                            <i class="iconmoon iconmoon-PlusCircle icons font-lg"></i>
                            <span>@Localizer["themmoi"]</span>
                        </a>
                        }
                       
                    
                </div>
            </div>
            <div>
                <div id="ListDoc"></div>
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>
@section Css{
    <link href="@Url.Content("~/lib/kendoui/styles/kendo.common.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/kendoui/styles/kendo.flat.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/kendoui/styles/kendo.mobile.flat.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/kendoui/styles/custom.css")" asp-append-version="true" rel="stylesheet" />
}
@section Scripts{
    <script src="@Url.Content("~/lib/kendoui/js/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/lib/kendoui/js/messages/kendo.messages."+_currentCulture+".min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/kendoui/js/cultures/kendo.culture."+_currentCulture+".min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/kendoui/js/function_kendo.js")" asp-append-version="true"></script>
    
    <script>
        var read_file = '@WebConfigs.AppSettings.WebApiFileUrl';
        var _OrgID = '@ViewBag.OrgID';
        var IsBlockEditBook = '@WebConfigs.AppSettings.IsBlockEditBook';
        var linkDocAttach = '@Url.Action("Index","DocAttach", new { id="__docid__"})';
        var linkDocReadRequiredInDoc = '@Url.Action("Index","DocReadRequiredInDoc", new { id="__docid__" })';
        var _localizer = @Html.Raw(JsonConvert.SerializeObject(_localizer));
        var link_api_file = "@(WebConfigs.AppSettings.WebApiFileUrl.TrimEnd('/') + "/")";
    </script>
    <script src="@Url.Content("~/lib/popper.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/moment.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/doc/list.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/doc/func_addupdate.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/doc/delivery_book.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/doc/getbook_warehouse.js")" asp-append-version="true"></script>

}

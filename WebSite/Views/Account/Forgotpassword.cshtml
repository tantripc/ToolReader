@{
    Layout = null;
    ViewData["Title"] = Localizer["quenmatkhau"]; ;
     string _currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    Dictionary<string, string> _localizer = Localizer.GetAllStrings().ToDictionary(x => x.Name, x => x.Value);
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!--ẩn hộp url khi chọn thêm trang vào màn hình chính apple-->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="@Url.Content("~/images/logo/favicon.ico")" rel="shortcut icon" type="image/x-icon" />

    <!-- Icons-->
    <link href="@Url.Content("~/templates/coreui/icons/css/coreui-icons.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/lib/font-awesome-4.7.0/css/font-awesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/simple-line-icons/css/simple-line-icons.css")" rel="stylesheet">
    <!-- Main styles for this application-->
    <link href="@Url.Content("~/templates/coreui/css/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/lib/pace-progress/templates/pace-theme-material.tmpl.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/pace-progress/themes/blue/pace-theme-material.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/iconmoon/style.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("~/lib/toastr/toastr.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.js")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/font-awesome-4.7.0/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/sweetalert2/dist/sweetalert2.min.css")" rel="stylesheet" asp-append-version="true" />

    <link href="@Url.Content("~/css/general.css")" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/css/custom.css")" asp-append-version="true" />
    <link href="@Url.Content("~/css/login.css")" asp-append-version="true" rel="stylesheet" />
    <script>
        const _RootBase = '@Url.Content("~/")';

    </script>

</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <section class="login-block">
        <div class="container form-login">
            <div class="row">
                <div class="col-md-4 login-sec">
                    <a class="button-animation button-back" href="@Url.Action("Login","Account")"><i class="nav-icon iconmoon iconmoon-back"></i></a>
                    <form id="form_forgot">
                      
                        <h2 class="text-center">@Localizer["quenmatkhau"]</h2>
                    <div id="validation-success"></div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">@Localizer["email"] (*)</label>
                            <input type="email" placeholder="@Localizer["nhapdiachiemail"]" name="txtemail" class="form-control" id="email" autofocus>
                        </div>
                    <p id="inputSigninNotication"></p>
                    <div class="">
                            <button type="button" id="buttonsignin" class="btn btn-login float-right" onclick="forgotpassword()">@Localizer["gui"]</button>
                    </div>
                    </form>
                </div>
                <div class="col-md-8 banner-sec">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid" src="~/images/login/slider-1.jpg" alt="First slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <div class="banner-text">
                                        <h3>@Localizer["content_side1"]</h3>
                                        <p>@Localizer["author_side1"]</p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="~/images/login/slider-2.jpg" alt="Secon slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <div class="banner-text">
                                        <h3>@Localizer["content_side2"]</h3>
                                        <p>@Localizer["author_side2"]</p>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="~/images/login/slider-3.jpg" alt="Th slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <div class="banner-text">
                                        <h3>@Localizer["content_side3"]</h3>
                                        <p>@Localizer["author_side3"]</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.js")"></script>
    <script src="@Url.Content("~/lib/popper.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/lib/pace-progress/pace.min.js")"></script>
    <script src="@Url.Content("~/lib/perfect-scrollbar/dist/perfect-scrollbar.min.js")"></script>
    <script src="@Url.Content("~/lib/chart.js/Chart.min.js")"></script>
    <script src="@Url.Content("~/templates/coreui/lib/coreui-plugin-chartjs-custom-tooltips/custom-tooltips.min.js")"></script>
    <script src="@Url.Content("~/lib/toastr/toastr.min.js")"></script>
    <script src="@Url.Content("~/lib/slimScroll/jquery.slimscroll.js")"></script>
    <script src="@Url.Content("~/lib/sweetalert2/dist/sweetalert2.min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/js/general.js")" asp-append-version="true"></script>
    <script>
        var url_Home = '@Url.Action("Login","Account")';
        var _localizer = @Html.Raw(JsonConvert.SerializeObject(_localizer));
    </script>
    <script>
        if ($('#form_forgot').length > 0) {
            $("#form_forgot").validate();
        }
        $('#email').keypress(function (event) {

        var keycode = (event.keyCode ? event.keyCode : event.which);
        if (keycode == '13') {
            Loadbutton();
        }
        });
    </script>
    <script src="@Url.Content("~/js/account/forgotpassword.js")" asp-append-version="true"></script>
</body>
</html>

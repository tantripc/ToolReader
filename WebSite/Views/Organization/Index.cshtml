 @{
     ViewData["Title"] = Localizer["danhsachdonvi"];
     Dictionary<string, string> _localizer = Localizer.GetAllStrings().ToDictionary(x => x.Name, x => x.Value);
     string _currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
}
<div class="row cnt_grid_custom">
    <div class="col-lg-12">
        <div class="cnt-card">
            <div class="card-header">
                <div class="card-header-actions">
                    <a class="card-header-action mr-2" href="@Url.Action("ExportFileTemplate","Home", new { fileTemplateName = DefineConstants.fileTemplateName.ORGANIZATION})">
                        <i class="iconmoon iconmoon-download"></i>
                        <span>@Localizer["taimauexcel"]</span>
                    </a>
                    <a class="card-header-action mr-2" title="@Localizer["xuatdulieu"]" href="#" onclick="export_org()">
                        <i class="icons iconmoon iconmoon-export icons font-lg"></i>
                        <span>@Localizer["xuatdulieu"]</span>
                    </a>
                    <a class="card-header-action mr-2" style="cursor:pointer" title="@Localizer["themmoidonvitufile"]" onclick="importOrg()">
                            <i class="icons iconmoon iconmoon-excel"></i>
                            <span>@Localizer["themtufile"]</span>
                        </a>
                        <a class="card-header-action" title="@Localizer["themmoidonvi"]" href="#" onclick="addUpdateOrganization()">
                            <i class="iconmoon iconmoon-PlusCircle icons font-lg"></i>
                            <span>@Localizer["themmoi"]</span>
                        </a>
                </div>
            </div>
            <div>
                <div id="tree_organization"></div>
            </div>
        </div>
    </div>
</div>

<div class="d-none" id="modal_import">
    <div class="form-group row">
        <label class="col-md-3 col-form-label" for="text-input">@Localizer["filedinhkem"]</label>
        <div class="col-md-9">
            <div class="mb-2 attachfilename"></div>
            <button class="btn" type="button" style="border: 1px dashed #a2aab2;background-color: #edeff0;line-height: 20px;padding: 10px 20px;text-align: center;" onclick="upload_attachfile()">
                <i class="icon-paper-clip"></i>
                <span>@Localizer["chonfiledinhkem"]</span>
            </button>
            <input type="file" data-name="" accept=".xlsx" hidden class="attachfile" />
        </div>
    </div>
    <div class="form-group row cnt-worksheet d-none">
        <label class="col-md-3 col-form-label">@Localizer["chonsheet"]</label>
        <div class="col-md-9">
            <div class="sheet_file" style="width:100%;"></div>
        </div>
    </div>
</div>

@section Css{
    <link href="@Url.Content("~/lib/toastr/toastr.min.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("~/lib/kendoui/styles/kendo.common.min.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("~/lib/kendoui/styles/kendo.flat.min.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("~/lib/kendoui/styles/kendo.mobile.flat.min.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("~/lib/kendoui/styles/custom.css")" asp-append-version="true" rel="stylesheet" />    
}
@section Scripts{
    <script src="@Url.Content("~/lib/toastr/toastr.min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/kendoui/js/kendo.all.min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/kendoui/js/messages/kendo.messages."+_currentCulture+".min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/kendoui/js/cultures/kendo.culture."+_currentCulture+".min.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/kendoui/js/function_kendo.js")" asp-append-version="true"></script>
   
    <script>
        var api_file = '@WebConfigs.AppSettings.WebApiFile';
        var _localizer = @Html.Raw(JsonConvert.SerializeObject(_localizer));  
        var url_organization_user = '@Url.Action("User","Organization")';
        var url_topic = '@Url.Action("Topic","Topic", new {orgid = "__id__", orgname = "__name__"})';
        var url_Export_Org = '@Url.Action("ExportFile","Organization")';

    </script>
    <script src="@Url.Content("~/js/organization/list.js")" asp-append-version="true"></script>
}

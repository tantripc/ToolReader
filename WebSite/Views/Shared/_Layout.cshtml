<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!--ẩn hộp url khi chọn thêm trang vào màn hình chính apple-->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="@Url.Content("~/images/logo/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <!-- Icons-->
    <link href="@Url.Content("~/templates/coreui/icons/css/coreui-icons.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/lib/font-awesome-4.7.0/css/font-awesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/simple-line-icons/css/simple-line-icons.css")" rel="stylesheet">
    <!-- Main styles for this application-->
    <link href="@Url.Content("~/templates/coreui/css/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/lib/iconmoon/style.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("~/lib/toastr/toastr.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/general.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("~/css/common.css")" asp-append-version="true" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/custom.css")" asp-append-version="true" />
    @RenderSection("Css", required: false)
  
    <script>

        const _RootBase = '@Url.Content("~/")';
        const _IsUsingSocket='@WebConfigs.AppSettings.IsUsingSocket';
    </script>
</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    @await Component.InvokeAsync("AdminHeader")
    <div class="app-body">
        @await Component.InvokeAsync("AdminMenuLeft", new{ id = ViewBag.ugid })
        <main class="main">
            @await Component.InvokeAsync("AdminBreadcrumb", new { breadcrumb = ViewBag.Breadcrumb })
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>
    @{
        Dictionary<string, string> _localizer_layout = Localizer.GetAllStrings().ToDictionary(x => x.Name, x => x.Value);
        string _currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    }
    <script>
         var _localizer_layout = @Html.Raw(JsonConvert.SerializeObject(_localizer_layout));
        var _currentCulture = '@_currentCulture';
    </script>

    <!-- CoreUI and necessary plugins-->
    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <script src="@Url.Content("~/lib/popper.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/lib/perfect-scrollbar/dist/perfect-scrollbar.min.js")"></script>
    <script src="@Url.Content("~/templates/coreui/js/coreui.js")"></script>
    <!-- Plugins and scripts required by this view-->
    <script src="@Url.Content("~/lib/chart.js/Chart.min.js")"></script>
    <script src="@Url.Content("~/templates/coreui/lib/coreui-plugin-chartjs-custom-tooltips/custom-tooltips.min.js")"></script>
    <script src="@Url.Content("~/lib/toastr/toastr.min.js")"></script>
    <script src="@Url.Content("~/lib/slimScroll/jquery.slimscroll.js")"></script>
    <script src="@Url.Content("~/js/general.js")" asp-append-version="true"></script>
    @if (WebConfigs.AppSettings.IsUsingSocket==true)
    {
        <script>
            var WEBSOCKET_URL = '@WebConfigs.AppSettings.WebSocket';
            var WEBSOCKET_PATH = '@WebConfigs.AppSettings.WebSocketPath';
            var SOCKETROOM = '@PubFunc.GetMD5(WebConfigs.AppSettings.SocketRoom)';
        </script>
        <script src="@WebConfigs.AppSettings.WebSocket@WebConfigs.AppSettings.WebSocketPath/socket.io.js" asp-append-version="true"></script>
        <script src="~/js/socket/connection.js" asp-append-version="true"></script>
        <script src="~/js/socket/notify.js" asp-append-version="true"></script>
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
